<p id="notice"><%= notice %></p>

<h1>Skaters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skaters.each do |skater| %>
      <tr>
        <td><%= skater.fullname %></td>
        <td><%= link_to 'Show', skater %></td>
        <td><%= link_to 'Edit', edit_skater_path(skater) %></td>
        <td><%= link_to 'Destroy', skater, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Skater', new_skater_path %>
